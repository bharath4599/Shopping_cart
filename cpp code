#include <bits/stdc++.h>
#include <iostream>

typedef long long int ll;

using namespace std;

struct basket{
    string name;
    int unitPrice;
    int gstInPercent;
    int gstInRupee;
    int quantity;
};


int main()
{
    //ios_base::sync_with_stdio(false);
    //cin.tie(NULL); cout.tie(NULL);

    int numberOfItems;

    cin>>numberOfItems;


    vector<struct basket> arr;

    struct basket maxGst;

    maxGst.gstInRupee=0;

    int sum=0;

    for(int i=0;i<numberOfItems;i++){
        basket newBasket;

        cin>>newBasket.name>>newBasket.unitPrice>>newBasket.gstInPercent>>newBasket.quantity;

        newBasket.gstInRupee = newBasket.gstInPercent*newBasket.unitPrice/100;

        if( newBasket.gstInRupee>maxGst.gstInRupee){
            maxGst=newBasket;
        }
        sum+=newBasket.unitPrice+newBasket.gstInRupee;

        arr.push_back(newBasket);
    }


    cout<<"max gst is paid on : "<<maxGst.name<<" which is : "<<maxGst.gstInRupee<<endl;

    cout<<"Price to be paid to shopkeeper is : "<<sum<<endl;


    return 0;
}
